{
    "blank_line": false,
    "commands-show-output": false,
    "fenced-code-language": false,
    "first-line-h1": false,    
    "no-duplicate-heading": {
      "siblings_only": true
    },
    "no-inline-html": {
      "allowed_elements": [
        "span",
        "details",
        "summary"
      ]
    },
    "no-trailing-punctuation": {
      "punctuation": ".,;:!。，；：！"
    },
    "ol-prefix": false,
    "single-h1": false,
    "ul-style": false
  }